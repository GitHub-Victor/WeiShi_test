<% content_for :sub_title, t("navigation.title.login") %>
<% content_for :head do %>
<%= stylesheet_link_tag "manage/main" %>
<% end %>
<div class="content_box_div">
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
    <%= f.input :login, :autofocus => true, :input_html => {:class => "input_text"} %>
    <%= f.input :password, :input_html => {:class => "input_text"} %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
    <%= f.button :submit, t("devise.sessions.submit_sign_in"), :class => 'btn-primary' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
