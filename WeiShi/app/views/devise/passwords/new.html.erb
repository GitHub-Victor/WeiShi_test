<% content_for :sub_title, t("navigation.title.forget_password") %>
<% content_for :head do %>
<%= stylesheet_link_tag "manage/main" %>
<% end %>
<div class="content_box_div">
  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, :required => true, :autofocus => true, :input_html => {:class => "input_text"}  %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t("devise.passwords.send_reset_password_instructions") %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
