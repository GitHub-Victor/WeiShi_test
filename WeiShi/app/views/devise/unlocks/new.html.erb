<% content_for :sub_title, t("devise.links.dont_receive_unlock_instructions") %>
<% content_for :head do %>
<%= stylesheet_link_tag "manage/main" %>
<% end %>
<div class="content_box_div">
  <%= simple_form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= f.error_notification %>
    <%= f.full_error :unlock_token %>

    <div class="form-inputs">
      <%= f.input :email, :required => true, :autofocus => true, :input_html => {:class => "input_text"} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t("devise.unlocks.submit_send") %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
