<ul class="head_list">
  <%= navigation_link t('navigation.title.homepage'), root_path %>
<% if user_signed_in? %>
  <%= navigation_link t('navigation.title.logout'), destroy_user_session_path, {:method=>'delete'} %>
<% else %>
  <%= navigation_link t('navigation.title.login'), new_user_session_path %>
<% end %>
<% if user_signed_in? %>
  <%= navigation_link t('navigation.title.edit_account'), edit_user_registration_path %>
  <% if current_user.has_role? :manager %>
    <%= navigation_link t('navigation.title.wiki'), manage_wikis_path %>
    <%= navigation_link t('navigation.title.wiki_category'), manage_wiki_categories_path %>
  <% end %>
  <% if current_user.has_role? :superadmin %>
    <%= navigation_link t('navigation.title.admin'), admin_root_path %>
  <% end %>
<% else %>
  <%= navigation_link t('navigation.title.sign_up'), new_user_registration_path %>
<% end %>
</ul>